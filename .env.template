# HYROX Venue Handicap Factor - Environment Configuration Template
# Copy this to .env and fill in your values

# Google Sheets API (for deliverables)
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials.json
GOOGLE_SHEETS_TOKEN_PATH=token.json

# Data Source Configuration
HYROX_RESULTS_URL=https://results.hyrox.com
# Add specific API endpoints or scraping URLs as needed

# Model Configuration
REFERENCE_VENUE=fastest  # Options: fastest, slowest, median, or specific venue name
OUTLIER_THRESHOLD_STDEV=3.0  # Remove times beyond this many standard deviations
MIN_ATHLETES_PER_VENUE=20  # Minimum sample size for venue analysis
MIN_REPEAT_ATHLETES=10  # Minimum athletes who competed at multiple venues

# Output Configuration
OUTPUT_SHEET_NAME=HYROX Venue Handicap Analysis
ENABLE_PLOTS=true
PLOT_DPI=300
